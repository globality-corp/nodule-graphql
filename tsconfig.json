{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "./lib",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "types": [
      "jest"
    ],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "$schema": "https://json.schemastore.org/tsconfig"
}
